<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.hjd.mapper.dao.TResourceDao">

    <resultMap type="com.aaa.hjd.mapper.entity.TResource" id="TResourceMap">
        <result property="id" column="id" jdbcType="OTHER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="size" column="size" jdbcType="INTEGER"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="extName" column="ext_name" jdbcType="VARCHAR"/>
        <result property="refBizType" column="ref_biz_type" jdbcType="VARCHAR"/>
        <result property="refBizId" column="ref_biz_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="OTHER"/>
        <result property="modifyTime" column="modify_time" jdbcType="OTHER"/>
        <result property="memo" column="memo" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TResourceMap">
        select
          id, name, size, path, type, ext_name, ref_biz_type, ref_biz_id, create_time, modify_time, memo
        from two_project.t_resource
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TResourceMap">
        select
          id, name, size, path, type, ext_name, ref_biz_type, ref_biz_id, create_time, modify_time, memo
        from two_project.t_resource
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TResourceMap">
        select
          id, name, size, path, type, ext_name, ref_biz_type, ref_biz_id, create_time, modify_time, memo
        from two_project.t_resource
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="size != null">
                and size = #{size}
            </if>
            <if test="path != null and path != ''">
                and path = #{path}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="extName != null and extName != ''">
                and ext_name = #{extName}
            </if>
            <if test="refBizType != null and refBizType != ''">
                and ref_biz_type = #{refBizType}
            </if>
            <if test="refBizId != null">
                and ref_biz_id = #{refBizId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="modifyTime != null">
                and modify_time = #{modifyTime}
            </if>
            <if test="memo != null and memo != ''">
                and memo = #{memo}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into two_project.t_resource(name, size, path, type, ext_name, ref_biz_type, ref_biz_id, create_time, modify_time, memo)
        values (#{name}, #{size}, #{path}, #{type}, #{extName}, #{refBizType}, #{refBizId}, #{createTime}, #{modifyTime}, #{memo})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update two_project.t_resource
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="size != null">
                size = #{size},
            </if>
            <if test="path != null and path != ''">
                path = #{path},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="extName != null and extName != ''">
                ext_name = #{extName},
            </if>
            <if test="refBizType != null and refBizType != ''">
                ref_biz_type = #{refBizType},
            </if>
            <if test="refBizId != null">
                ref_biz_id = #{refBizId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="modifyTime != null">
                modify_time = #{modifyTime},
            </if>
            <if test="memo != null and memo != ''">
                memo = #{memo},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from two_project.t_resource where id = #{id}
    </delete>

</mapper>